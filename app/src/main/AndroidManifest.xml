<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.sotoestevez.allforone">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_full"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.4l1app">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".ui.location.LocationActivity"
            android:exported="true"
            android:label="@string/title_activity_location"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.keeper.qr.QRScannerActivity"
            android:exported="true"
            android:label="@string/title_activity_qr"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.bonds.BondsActivity"
            android:exported="true"
            android:label="@string/title_activity_bonds"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.setup.SetUpActivity"
            android:exported="true"
            android:label="@string/title_activity_set_up"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.keeper.KeeperMainActivity"
            android:exported="true"
            android:label="@string/title_activity_keeper_main"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.patient.PatientMainActivity"
            android:exported="true"
            android:label="@string/title_activity_patient_main"
            android:theme="@style/Theme.4l1app.NoActionBar" />
        <activity
            android:name=".ui.launch.LaunchActivity"
            android:exported="true"
            android:label="@string/title_activity_launch"
            android:theme="@style/Theme.4l1app.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>