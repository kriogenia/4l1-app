<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/txt_btn_extra</item>
        <item name="iconGravity">textTop</item>
        <item name="cornerRadius">@dimen/extra_round_corner</item>
    </style>

    <style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/extra_round_corner</item>
        <item name="cardElevation">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="AppTheme.FullDialog" parent="Theme.4l1app">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>