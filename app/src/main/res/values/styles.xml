<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/txt_btn_extra</item>
        <item name="iconGravity">textTop</item>
        <item name="cornerRadius">@dimen/extra_round_corner</item>
    </style>

    <style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/extra_round_corner</item>
        <item name="cardElevation">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="AppTheme.FullDialog" parent="Theme.4l1app">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.SecondaryButton" parent="ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="borderWidth">@dimen/no_dim</item>
    </style>

    <style name="AppTheme.SecondaryButton.Badge" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">@dimen/elevation_above_fab</item>
        <item name="android:paddingHorizontal">@dimen/base_margin</item>
        <item name="android:paddingVertical">@dimen/badge_vertical_padding</item>
    </style>

    <dimen name="elevation_above_fab">10dp</dimen>
</resources>