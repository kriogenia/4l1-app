<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="dev.sotoestevez.allforone.ui.activities.keeper.KeeperMainViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/layPatientMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.patient.KeeperMainActivity">

        <!-- Warning panel -->

        <include
            layout="@layout/content_warning_box"
            android:visibility="@{model.notification != null ? View.VISIBLE : View.GONE}"
            app:message='@{model.notification.print(context) }' />

        <!-- Bonded layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{model.cared != null ? View.VISIBLE : View.GONE}"
            android:orientation="vertical">

            <!-- Cared profile card -->

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/profileCard"
                layout="@layout/content_profile_card"
                app:user="@{model.cared}"
                app:model="@{model}"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBonds"
                android:layout_width="match_parent"
                android:text="@string/bonds"
                style="@style/AppTheme.MainButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFindLocation"
                android:layout_width="match_parent"
                android:text="@{String.format(@string/find, model.cared.displayName)}"
                tools:text="Find cared"
                style="@style/AppTheme.MainButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeed"
                android:layout_width="match_parent"
                android:text="@string/feed"
                style="@style/AppTheme.MainButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTasks"
                android:layout_width="match_parent"
                android:text="@{String.format(@string/cared_tasks, model.cared.displayName)}"
                tools:text="Cared tasks"
                style="@style/AppTheme.MainButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotifications"
                android:layout_width="match_parent"
                android:text="@string/notifications"
                tools:text="Notifications"
                style="@style/AppTheme.MainButton" />

        </LinearLayout>

        <!-- No bond panel -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{model.loading || model.cared != null ? View.GONE : View.VISIBLE}">


            <!-- Forge bond button -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForgeBond"
                android:layout_width="match_parent"
                android:text="@string/forge_bond"
                style="@style/AppTheme.MainButton" />

        </LinearLayout>

    </LinearLayout>

</layout>