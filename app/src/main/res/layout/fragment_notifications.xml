<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">


    <data>
        <variable
            name="manager"
            type="dev.sotoestevez.allforone.util.helpers.NotificationsManager" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/lblNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/notifications"
            style="@style/TextAppearance.MaterialComponents.Headline2"/>

        <!-- Mark all as read button -->

        <Button
            android:id="@+id/btnReadAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_read_24"
            android:text="@string/mark_all_as_read"
            android:layout_gravity="end"
            android:enabled="@{manager.numberOfNotifications > 0}"
            android:onClick="@{() -> manager.readAll()}"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

        <!-- Notification list -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNotifications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            app:layout_constrainedHeight="true"
            app:heldItems="@{manager.notifications}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:icon="@drawable/ic_baseline_back"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>



</layout>